<%= form_tag do %>
  <fieldset>
    <legend>Please enter your CMS admin credentials below</legend>
    <p>
      <%= label_tag :email %>
      <%= email_field_tag :email, params[:email], placeholder: 'admin@example.com' %>
    </p>
    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </p>
    <p>
      <%= submit_tag "Sign In" %>
    </p>
  </fieldset>
<% end %>
